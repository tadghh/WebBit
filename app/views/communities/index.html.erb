<% content_for :community_label, "All communities"%>
<div class="w-full">
	<% if notice.present? %>
		<p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 bg-green-50 rounded-lg" id="notice"><%= notice %></p>
	<% end %>

	<div class="flex justify-between items-center">
		<h1 class="text-4xl font-bold">Communities</h1>
		<%= link_to "New community", new_community_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
	</div>

	<div id="communities" class="min-w-full">
		<%= render @communities %>
	</div>
</div>
