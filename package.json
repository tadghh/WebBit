{
	"name": "app",
	"private": "true",
	"scripts": {
		"build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets && tailwind --postcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css",
		"build:css": "tailwind --postcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css"
	},
	"dependencies": {
		"@hotwired/stimulus": "^3.2.2",
		"@hotwired/turbo-rails": "^8.0.0-beta.2",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"autoprefixer": "^10.4.16",
		"esbuild": "^0.19.11",
		"postcss": "^8.4.33",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.0.0",
		"postcss-nesting": "^12.0.2",
		"tailwindcss": "^3.4.1",
		"yarn": "^1.22.21"
	},
	"devDependencies": {
		"@prettier/plugin-ruby": "^4.0.4",
		"prettier": "^3.1.1",
		"prettier-plugin-erb": "^0.4.0"
	}
}
