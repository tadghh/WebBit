<!DOCTYPE html>
<html>
  <head>
    <title>Webbit</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body class="overflow-x-hidden relative h-screen bg-gray-200">
    <% flash.each do | type, message| %>
      <% if type == "alert" %>
        <div class=".bg-red-500" >
          <div class="container px-2 py-4 mx-auto font-medium text-center text-white font-san">
            <%= message %>
          </div>
        </div>
      <% end %>
      <% if type == "notice" %>
        <div class=".bg-green-500" >
          <div class="container px-2 py-4 mx-auto font-medium text-center text-white font-san">
            <%= message %>
          </div>
        </div>
      <% end %>
    <% end %>
    <nav class="py-2 bg-white border-b border-gray-400" role="navigation" aria-label="main navigation">
      <div class="flex flex-col flex-wrap justify-center items-center px-4 py-3 lg:flex-row lg:justify-start lg:content-center lg:px-6 lg:py-0 lg:space-x-3" >
        <%= link_to root_path, class: "leading-normal no-underline text-gray-800 my-2  hover:text-purple-600" do %>
          <h1 class="pr-2 text-lg font-semibold uppercase"> Webbit</h1>
        <% end %>
        <div class="flex flex-col flex-wrap flex-1 justify-start w-full lg:flex-row">
          <div class="flex flex-wrap flex-1 items-center space-x-6">
            <div class="w-1/3">
              <div class="relative">
                <select class="select" name="" id="">
                  <option value="">Community 1</option>
                  <option value="">Community 2</option>
                  <option value="">Community 3</option>
                </select>
                <div class="flex absolute right-2 inset-y-5 items-center pointer-events-none">
                  <%= render_svg "icons/chevron-down", styles: "fill-current w-4 h-4 text-gray-500" %>
                </div>
              </div>
            </div>
            <div class="flex-1">
              <div class="relative">
                <input type="text" class="pl-10 input" placeholder="Search Webbit" >
                <div class="flex absolute left-2 inset-y-5 items-center pointer-events-none">
                  <%= render_svg "icons/search", styles: "stroke-current w-6 h-6 text-gray-500" %>
                </div>
              </div>
            </div>
          </div>
          <div class="flex flex-wrap justify-end items-center pt-6 pl-6 mx-auto lg:ml-auto lg:pt-0">
            <div class="mr-3">
              <% if user_signed_in? %>
                <%= link_to new_submission_path do%>
                  <%= render_svg "icons/create" %>
                <% end %>
                <div class="ml-1 text-gray-600 bg-white rounded border border-gray-400 hover:bg-gray-200">
                  <div class="pt-2 pr-1 pl-3 mb-2">
                    <%= link_to "#", class: "no-underline flex justify-between text-xs tracking-wide items-center font-semibold" do %>
                      <%= current_user.username ||= current_user.email %>
                      <%= render_svg "icons/chevron-down" %>
                    <% end %>
                    <ul>
                      <li>
                        <%= link_to "#", class:"flex items-center px-4 py-2 text-sm text-gray-700 no-underline hover:bg-indigo-600 hover:text-white" do %>
                          <%= render_svg "icons/user", styles: "w-5 h-5 fill-current text-gray-600 mr-3"%>
                          My Profile
                        <% end%>
                      </li>
                      <li>
                        <%= link_to edit_user_registration_path, class:"flex items-center px-4 py-2 text-sm text-gray-700 no-underline hover:bg-indigo-600 hover:text-white" do %>
                          <%= render_svg "icons/settings", styles: "w-5 h-5 fill-current text-gray-600 mr-3"%>
                          Account Settings
                        <% end%>
                      </li>
                      <li>
                        <%= button_to destroy_user_session_path, method: :delete,class:"flex items-center px-4 py-2 text-sm text-gray-700 no-underline hover:bg-indigo-600 hover:text-white" do %>
                          <%= render_svg "icons/signout", styles: "w-5 h-5 fill-current text-gray-600 mr-3"%>
                          Logout
                        <% end%>
                      </li>
                    </ul>
                  </div>
                </div>
              <% else %>
                <%= link_to "Login", new_user_session_path, class: "btn btn-outline mr-2"%>
                <%= link_to "Sign up", new_user_registration_path, class: "btn btn-indigo "%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <div class="container py-6 mx-auto">
      <%= yield %>
    </div>
  </body>
</html>
