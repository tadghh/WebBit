<%= turbo_frame_tag comment do%>
	<div class="flex items-start p-4 my-4 rounded border">
		<%= render "shared/voting" , is_comment: true, content: comment, upvote: upvote_submission_comment_path(@submission, comment), downvote: downvote_submission_comment_path(@submission, comment) %>
		<div>
			<p class="font-semibold">
				<%= comment.user.username%>
			</p>
			<p class="prose prose-indigo">
				<%= comment.reply %>
			</p>
			<% if author_of?(comment) %>
				<div class="flex items-end space-x-3">
					<%= link_to "Edit comment", edit_submission_comment_path(comment.submission,comment), class:"text-indigo-600 underline"%>
					<%= button_to "Delete comment", submission_comment_path(comment.submission,comment), class:"text-indigo-600 underline", method: :delete, data: {confirm: "Delete this post?", turbo_method: :delete }%>
				</div>
			<%end %>
		</div>
	</div>
<% end%>
