<%= form_with(model: community, class: "contents") do |form| %>
	<% if community.errors.any? %>
		<div id="error_explanation" class="px-3 py-2 mt-3 font-medium text-red-500 bg-red-50 rounded-lg">
			<h2><%= pluralize(community.errors.count, "error") %> prohibited this community from being saved:</h2>

			<ul>
				<% community.errors.each do |error| %>
					<li><%= error.full_message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="my-5">
		<%= form.label :name %>
		<%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	</div>

	<div class="my-5">
		<%= form.label :title %>
		<%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	</div>

	<div class="my-5">
		<%= form.label :description %>
		<%= form.text_area :description, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	</div>

	<div class="my-5">
		<%= form.label :sidebar %>
		<%= form.text_area :sidebar, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
	</div>

	<div class="inline">
		<%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
	</div>
<% end %>
