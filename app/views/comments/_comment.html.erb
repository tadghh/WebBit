<%= turbo_frame_tag comment do%>
	<div class="p-4 my-4 rounded border">
		<p class="font-semibold">
			<%= comment.user.username%>
		</p>
		<p class="prose prose-indigo">
			<%= comment.reply %>
		</p>
		<div class="flex items-end space-x-3">
			<%= link_to "Edit comment", edit_submission_comment_path(comment.submission,comment), class:"text-indigo-600 underline"%>
			<%= button_to "Delete comment", submission_comment_path(comment.submission,comment), class:"text-indigo-600 underline",method: :delete, data: {confirm: "Delete this post?", turbo_method: :delete }%>
		</div>

	</div>

<% end%>
