<% content_for :form_wrap do %>

	<h2 class="mb-6 text-3xl font-bold">Change your password</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
		<%= render "devise/shared/error_messages", resource: resource %>
		<%= f.hidden_field :reset_password_token %>

		<div class="mb-6">
			<%= f.label :password, "New password" , class: "label"%>
			<% if @minimum_password_length %>
				<p class="text-sm text-gray-600">	<em>(<%= @minimum_password_length %> characters minimum)</em></p>

			<% end %>
			<%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
		</div>

		<div class="mb-6">
			<%= f.label :password_confirmation, "Confirm new password" , class: "label"%>
			<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
		</div>

		<%= f.submit "Change my password", class: "btn btn-outline w-full" %>

	<% end %>

	<%= render "devise/shared/links" %>
<% end %>
